#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
        keymap {
                compatible = "zmk,keymap";

                default_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  1  |  2  |  3  |  4  |  5  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        bindings = <
   &kp ESC   &kp N1 &kp N2  &kp N3  &kp N4 &kp N5      &kp Y   &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp TAB   &kp Q  &kp W   &kp E   &kp R   &kp T       &kp Y   &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LSHFT &kp A  &kp S   &kp D   &kp F   &kp G       &kp H   &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LCTRL &kp Z  &kp X   &kp C   &kp V   &kp B       &kp N   &kp M  &kp COMMA &kp DOT &kp FSLH &kp ESC
                    &kp LWIN &mo 1 &kp SPACE &kp ENT      &kp B   &kp RET &mo 2  &kp RALT
                        >;
                };
                lower_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  1  |  2  |  3  |  4  |  5  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        bindings = <
   &kp ESC   &kp N1 &kp N2  &kp N3  &kp N4 &kp N5      &kp Y   &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp TAB   &kp Q  &kp W   &kp E   &kp R   &kp T       &kp Y   &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LSHFT &kp A  &kp S   &kp D   &kp F   &kp G       &kp H   &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LCTRL &kp Z  &kp X   &kp C   &kp V   &kp B       &kp N   &kp M  &kp COMMA &kp DOT &kp FSLH &kp ESC
                    &kp RET &mo LWIN &kp 1 &kp SPACE      &kp B   &kp RET &mo 2  &kp RALT
                        >;
                };

                raise_layer {
// -----------------------------------------------------------------------------------------
// |  ESC |  1  |  2  |  3  |  4  |  5  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
// | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
// | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
//                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |
                        bindings = <
   &kp ESC   &kp N1 &kp N2  &kp N3  &kp N4 &kp N5      &kp Y   &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp TAB   &kp Q  &kp W   &kp E   &kp R   &kp T       &kp Y   &kp U  &kp I     &kp O   &kp P    &kp BSPC
   &kp LSHFT &kp A  &kp S   &kp D   &kp F   &kp G       &kp H   &kp J  &kp K     &kp L   &kp SEMI &kp SQT
   &kp LCTRL &kp Z  &kp X   &kp C   &kp V   &kp B       &kp N   &kp M  &kp COMMA &kp DOT &kp FSLH &kp ESC
                    &kp RET &mo LWIN &kp 1 &kp SPACE      &kp B   &kp RET &mo 2  &kp RALT
                        >;
                };
        };
};
